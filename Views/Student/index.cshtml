@model List<Student_MVC.Models.StudentsModel>

@{
    ViewBag.Title = "Student List";
}

<div class="container mt-4"> 
    <h2 class="mb-4">ðŸ“š Registered Students</h2>

    <a href="@Url.Action("Register", "Student")" class="btn btn-primary mb-3">+ Register New Student</a>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info">No students have been registered yet.</div>
    }
    else
    {
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Full Name</th>
                    <th>Phone-Number</th>
                    <th>Email</th>
                    <th>Date of Birth</th>
                    <th>Gender</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model)
                {
                    <tr>
                        <td>@student.FullName</td>
                        <td>@student.PhoneNumber</td>
                        <td>@student.Email</td>
                        <td>@student.DateOfBirth.ToString("dd/MM/yyyy")</td>
                        <td>@student.Gender</td>
                        <td>
                            <a href="@Url.Action("Edit", "Student", new { id = student.StudentId })" class="btn btn-sm btn-warning">Edit</a>
                            <a href="@Url.Action("Delete", "Student", new { id = student.StudentId })" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this student?');">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
