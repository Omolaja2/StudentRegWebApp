@model Student_MVC.Models.StudentsModel

@{
    ViewBag.Title = "Register Student‚¨áÔ∏è";
}

<div class="container mt-4">
    <h2 class="mb-4">üìù Register a New Student</h2>

    @using (Html.BeginForm())
    {
        <div class="mb-3">
            @Html.LabelFor(m => m.FullName)
            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.PhoneNumber)
            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
        </div>

        <div class="mb-3">
            @Html.Label("Date of Birth (Year)")
            @Html.TextBoxFor(m => m.DateOfBirth, new { @class = "form-control", type = "number" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.ID)
            @Html.TextBoxFor(m => m.ID, new { @class = "form-control" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Gender)
            @Html.TextBoxFor(m => m.Gender, new { @class = "form-control" })
        </div>

        <button type="submit" class="btn btn-success">Register</button>
        <a href="@Url.Action("Index", "Student")" class="btn btn-secondary">Cancel</a>
    }
</div>
