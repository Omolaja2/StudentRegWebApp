<h2>Admin Login</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-danger">@ViewBag.Message</div>
}
<form asp-action="Login" method="post">
    <div class="form-group">
        <label>Username</label>
        <input asp-for="Username" class="form-control" />
